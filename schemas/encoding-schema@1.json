{
  "$id": "https://www.jsonbinpack.org/schemas/encoding-schema@1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "The JSON BinPack encoding schema",
  "$comment": "See https://www.jsonbinpack.org",
  "type": "object",
  "oneOf": [
    { "$ref": "#/$defs/array/FLOOR_TYPED_LENGTH_PREFIX" }
  ],
  "$defs": {
    "array": {
      "FLOOR_TYPED_LENGTH_PREFIX": {
        "type": "object",
        "required": [ "type", "encoding", "options" ],
        "additionalProperties": false,
        "properties": {
          "type": { "const": "array" },
          "encoding": { "const": "FLOOR_TYPED_LENGTH_PREFIX" },
          "options": {
            "minimum": { "type": "integer", "minimum": 0 },
            "encoding": { "$ref": "#" },
            "prefixEncodings": {
              "type": "array",
              "items": { "$ref": "#" }
            }
          }
        }
      }
    }
  }
}
